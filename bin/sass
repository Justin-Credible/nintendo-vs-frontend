#!/bin/bash

# Get the path to the script's parent directory.
if [ -n "$ZSH_VERSION" ]; then
    # https://stackoverflow.com/a/23259585
    SCRIPT_PATH=$( cd "$(dirname "${(%):-%N}")" ; pwd -P )
else
    # Assume Bash
    # https://stackoverflow.com/a/4774063
    SCRIPT_PATH=$( cd "$(dirname "${BASH_SOURCE[0]}")" ; pwd -P )
fi

#npx sass $SCRIPT_PATH/../src/renderer/Styles/Index.scss:$SCRIPT_PATH/../app/www/css/bundle.css

# change to use stdout to fix path issue on Windows.
npx sass $SCRIPT_PATH/../src/renderer/Styles/Index.scss > $SCRIPT_PATH/../app/www/css/bundle.css
