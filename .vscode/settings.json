{
    "search.exclude": {
        ".git": true,
        "node_modules": true,
        "bower_components": true,
        "build": true,

        "app/shell": true,

        "app/www/js/templates.js": true,
        "app/www/js/bundle.js": true,
        "app/www/js/bundle.js.map": true,
        "app/www/js/bundle.d.ts": true,
        "app/www/css/bundle.css": true,
        "app/www/css/bundle.css.map": true,
        "app/www/js/src": true,
        "app/www/lib": true,

        "src/input-daemon/bin": true,
        "src/input-daemon/obj": true
    },

    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,

        // Exclude these files to prevent VSCode from trying to load the project.
        "src/input-daemon/*.sln": true,
        "src/input-daemon/*.csproj": true
    },

    "typescript.tsdk": "node_modules/typescript/lib",

    "tslint.configFile": "tslint.json",
    "tslint.ignoreDefinitionFiles": true,

    "editor.tabSize": 4,
    "editor.insertSpaces": true
}